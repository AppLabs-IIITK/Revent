rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ðŸ”¹ Helper Functions
    function isAdmin(clubId) {
      let clubDoc = get(/databases/$(database)/documents/clubs/$(clubId)).data;
      return clubDoc.adminEmails != null &&
             clubDoc.adminEmails is list &&
             request.auth.token.email in clubDoc.adminEmails;
    }

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isDeleteMetadataValid() {
      return resource.data._deleteMetadata != null &&
             resource.data._deleteMetadata.userEmail == request.auth.token.email &&
             resource.data._deleteMetadata.userId == request.auth.uid;
    }

    function isMetadataValid() {
      return request.resource.data._metadata != null &&
             request.resource.data._metadata.userEmail == request.auth.token.email &&
             request.resource.data._metadata.userId == request.auth.uid;
    }


    // ðŸ”¹ Users Collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && isOwner(userId) && isMetadataValid();
      allow update: if isAuthenticated() && isOwner(userId) && isMetadataValid();
      // No delete rule - users shouldn't be able to delete their accounts
    }

    // ðŸ”¹ Clubs Collection
    match /clubs/{clubId} {
      allow read: if isAuthenticated();
      allow update: if isAuthenticated() && isAdmin(clubId) && isMetadataValid();
      // No create/delete rules - clubs should be managed by backend
    }

    // ðŸ”¹ Events Collection
    match /events/{eventId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
                   isAdmin(request.resource.data.clubId) && isMetadataValid();
      allow update: if isAuthenticated() &&
                   isAdmin(resource.data.clubId) && isAdmin(request.resource.data.clubId) &&
                   isMetadataValid();
      allow delete: if isAuthenticated() &&
                   isAdmin(resource.data.clubId) &&
                   isDeleteMetadataValid();
    }

    match /announcements/{clubId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && isAdmin(clubId) && isMetadataValid();
      allow update: if isAuthenticated() && isAdmin(clubId) && isMetadataValid();
      allow delete: if isAuthenticated() && isAdmin(clubId) &&
                   isDeleteMetadataValid();
    }

    // ðŸ”¹ Map Markers Collection
    match /mapMarkers/{markerId} {
      allow read: if isAuthenticated();
      // Any authenticated user can create/update/delete markers
      allow create: if isAuthenticated() && isMetadataValid();
      allow update: if isAuthenticated() && isMetadataValid();
      allow delete: if isAuthenticated() &&
                   isDeleteMetadataValid();
    }

    // ðŸ”¹ Admin Logs Collection - Only super admins can read, only Cloud Functions can write
    match /admin_logs/{logId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only Cloud Functions can write
    }

    match /version_info/{docId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    // ðŸ”¹ Deny access to any other collections by default
    match /{document=**} {
      allow read: if isAuthenticated();
      allow write: if false;
    }
  }
}